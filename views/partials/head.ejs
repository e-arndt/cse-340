<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Dynamic Page Title -->
  <title><%= title %> | CSE 340 App</title>

  <!-- Dynamic Meta Description -->
  <% if (metaDescription) { %>
    <meta name="description" content="<%= metaDescription %>">
  <% } %>

  <!-- Open Graph (Facebook, LinkedIn, etc.) -->
  <meta property="og:title" content="<%= ogTitle || title %>">
  <meta property="og:description" content="<%= ogDescription || metaDescription || 'Browse vehicles at CSE Motors' %>">
  <meta property="og:image" content="<%= ogImage || '/images/vehicles/delorean.jpg' %>">
  <meta property="og:url" content="<%= ogUrl || '' %>">
  <meta property="og:type" content="website">

  <!-- Twitter Cards -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= ogTitle || title %>">
  <meta name="twitter:description" content="<%= ogDescription || metaDescription || 'Browse vehicles at CSE Motors' %>">
  <meta name="twitter:image" content="<%= ogImage || '/images/vehicles/delorean.jpg' %>">


  <!-- Favicon -->
  <link rel="icon" href="/images/site/favicon-32x32.png" type="image/png" sizes="32x32">

  <!-- Preloads -->
  <% if (title === "Home" || title === "Server Error") { %>
  <link rel="preload" as="image" href="/images/site/checkerboard.jpg">
  <% } %>

  <% if (ogImage && title !== 'Home') { %>
  <link rel="preload" as="image" href="<%= ogImage %>">
  <% } %>

  <% if (preloadImage) { %>
  <link rel="preload" as="image" href="<%= preloadImage %>">
  <% } %>

  
  <!-- Fonts + Styles -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
