<header id="top-header">
  <!-- Site Name -->
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>

  <!-- Account Links -->
  <div id="tools">
    <% if (locals.loggedin) { %>
      <span class="welcome">
        <a href="/account/" title="Go to your Account Management page">
          Welcome <%= locals.accountData.account_firstname %>
        </a>
      </span>

      <a href="/account/logout" title="Click to log out">Logout</a>
    <% } else { %>
      <a href="/account/login" title="Click to log in">Login</a>
    <% } %>
  </div>
</header>
