<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<%- messages() %>

<ul class="management-links">
  <li><a href="/inv/add-classification">Add New Classification</a></li>
  <li><a href="/inv/add-vehicle">Add New Vehicle</a></li>

  <% if (locals.accountData && locals.accountData.account_type === 'Admin') { %>
    <li><a href="/admin/approval">Manage Approvals</a></li>
  <% } %>
</ul>

<!-- Step 1: Heading -->
<h2 class="mgmt-heading">Manage Inventory</h2>

<!-- Step 2: Instructions -->
<p class="mgmt-instructions">
  Select a classification for vehicles to Modify or Delete.
</p>

<!-- Step 3: Classification list -->
<div class="mgmt-select">
  <%- classificationSelect %>
</div>

<!-- Step 4: Empty table for inventory items -->
<div class="mgmt-table-wrapper">
  <table id="inventoryDisplay" class="mgmt-table"></table>
</div>

<!-- Step 5: Fallback if JS is disabled -->
<noscript>JavaScript must be enabled to use this page.</noscript>

<!-- Link to the inventory JavaScript -->
<script src="/js/inventory.js"></script>
