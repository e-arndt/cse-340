<% /* ===============================
     Delete Classification View
     Dynamic layout / meta supported
   =============================== */ %>

<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<section class="delete-classification-section">
  <p>
    Are you sure you want to delete the classification
    "<strong><%= classification_name %></strong>"?
  </p>

  <form action="/inv/delete-classification" method="POST" class="delete-class-form">
    <input type="hidden" name="classification_id" value="<%= classification_id %>">

    <div class="delete-actions">
      <button type="submit" class="delete-class-btn">
        Yes, Delete Classification
      </button>

      <a href="/inv/" class="mgmt-btn cancel-btn">
        Cancel
      </a>
    </div>
  </form>
</section>

<!-- JS and layout footer are included automatically -->
<script src="/js/inventory.js"></script>
