<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<!-- Flash messages -->
<%- messages() %>

<!-- Validation errors -->
<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form id="editVehicleForm" class="vehicle-form" action="/inv/update" method="post" novalidate>
  <fieldset>
    <legend>* Required fields</legend>

    <!-- Hidden ID -->
    <input type="hidden" name="inv_id"
    <% if (locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>


    <!-- Classification -->
    <label for="classification_id">*Classification:</label>
    <%- classificationSelect %>

    <!-- Make -->
    <label for="inv_make">*Make:</label>
    <input type="text" id="inv_make" name="inv_make"
           required minlength="2" pattern="[A-Za-z]{2,}"
           value="<%= locals.inv_make %>" placeholder="Min 2 letters">

    <!-- Model -->
    <label for="inv_model">*Model:</label>
    <input type="text" id="inv_model" name="inv_model"
           required minlength="2" pattern="[A-Za-z0-9]{2,}"
           value="<%= locals.inv_model %>" placeholder="Letters or numbers, min 2">

    <!-- Description -->
    <label for="inv_description">*Description:</label>
    <textarea id="inv_description" name="inv_description"
              required minlength="4"
              placeholder="Enter a detailed vehicle description"><%= locals.inv_description %></textarea>

    <!-- Image Path -->
    <label for="inv_image">Image Path (optional):</label>
    <input type="text" id="inv_image" name="inv_image"
           pattern="^/images/vehicles/[a-zA-Z0-9_-]+\.(png|jpg|webp)$"
           value="<%= locals.inv_image %>" placeholder="/images/vehicles/no-car-image.png">

    <!-- Thumbnail Path -->
    <label for="inv_thumbnail">Thumbnail Path (optional):</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail"
           pattern="^/images/vehicles/[a-zA-Z0-9_-]+-tn\.(png|jpg|webp)$"
           value="<%= locals.inv_thumbnail %>" placeholder="/images/vehicles/no-car-image-tn.png">

    <!-- Price -->
    <label for="inv_price">*Price:</label>
    <input type="text" id="inv_price" name="inv_price"
           required pattern="^[0-9]{3,7}(\.[0-9]{1,2})?$"
           value="<%= locals.inv_price %>" placeholder="Enter 3–7 digits, decimal or integer">

    <!-- Year -->
    <label for="inv_year">*Year:</label>
    <input type="text" id="inv_year" name="inv_year"
           required pattern="^[12][0-9]{3}$"
           value="<%= locals.inv_year %>" placeholder="4-digit year, 1900 - current">

    <!-- Miles -->
    <label for="inv_miles">*Miles:</label>
    <input type="text" id="inv_miles" name="inv_miles"
           required pattern="^[0-9]{2,7}$"
           value="<%= locals.inv_miles %>" placeholder="Enter 2–7 digits, no , or .">

    <!-- Color -->
    <label for="inv_color">*Color:</label>
    <input type="text" id="inv_color" name="inv_color"
           required minlength="3" maxlength="24" pattern="[A-Za-z ]{3,24}"
           value="<%= locals.inv_color %>" placeholder="3–24 letters and spaces">

    <!-- Submit -->
    <button type="submit" class="rbtn">Update Vehicle</button>
  </fieldset>
</form>
